<tbody>
    <tr>
           <td> <%= contact.name %></td>
            <td><%= link_to "Show",
                            contact_path(contact), class: "btn btn-info"%>
            </td>
            <td><%= link_to "Edit",
                edit_contact_path(contact), class: "btn btn-warning"%>
            </td>
            <td><%= button_to "Delete", contact,
                                method: :delete,
                                class: "btn btn-danger",
                                data: {confirm: "Are you sure that you remove #{contact.name}?"}%>
            </td>
    </tr>
</tbody>